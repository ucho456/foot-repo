{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "functions": {
    "source": "functions",
    "predeploy": "npm --prefix functions run build"
  },
  "hosting": {
    "public": "src/static",
    "rewrites": [
      {
        "source": "**",
        "run": {
          "serviceId": "foot-repo",
          "region": "asia-northeast1"
        }
      },
      {
        "source": "/sitemap.xml",
        "function": "buildSitemap"
      },
      {
        "source": "!/sitemap.xml",
        "function": "preRender"
      }
    ]
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "firestore": {
      "port": 8083
    },
    "storage": {
      "port": 9199
    },
    "functions": {
      "port": 5001
    },
    "hosting": {
      "port": 5000
    },
    "ui": {
      "enabled": true
    },
    "pubsub": {
      "port": 8086
    }
  }
}
