// firebase deploy --only storage:rules

rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /users/{userId} {
    	allow read;
    	allow write: if request.auth != null
      && request.resource.size < 50 * 1024
      && request.resource.contentType.matches('image/.*');
    }
  }
}
